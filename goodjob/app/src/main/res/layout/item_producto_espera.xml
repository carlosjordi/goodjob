<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#f4fcf6"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_estado_mis_actividades">

        <TextView
            android:id="@+id/productoEsperaNombre"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/producto"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductoEsperaNombre"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="valor del nombre"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productoEsperaStock"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/productoEsperaNombre"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/stock_producto"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productoEsperaNombre" />

        <TextView
            android:id="@+id/tvProductoEsperaStock"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvProductoEsperaNombre"
            android:layout_marginStart="192dp"
            android:layout_marginTop="20dp"
            android:text="valor del stock"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductoEsperaNombre" />

        <TextView
            android:id="@+id/productoEsperaValor"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/productoEsperaStock"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/valor_puntos_producto"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productoEsperaStock" />

        <TextView
            android:id="@+id/tvProductoEsperaValor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvProductoEsperaStock"
            android:layout_marginStart="192dp"
            android:layout_marginTop="12dp"
            android:text="valor del valor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductoEsperaStock" />

        <TextView
            android:id="@+id/productoEsperaFechaRegistro"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/productoEsperaValor"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/fecha_registro_producto"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productoEsperaValor" />

        <TextView
            android:id="@+id/tvProductoEsperaFechaRegistro"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvProductoEsperaValor"
            android:layout_marginStart="192dp"
            android:layout_marginTop="12dp"
            android:text="valor del stock"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductoEsperaValor" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProductoCanjeImagen"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/producto"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/producto" />

    <TextView
        android:id="@+id/tvProductoCanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/producto_canje"
        app:layout_constraintBottom_toTopOf="@+id/tvProductoCanjeStock"
        app:layout_constraintEnd_toStartOf="@+id/tvProductoCanjeValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProductoCanjeImagen" />

    <TextView
        android:id="@+id/tvProductoCanjeStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/stock"
        app:layout_constraintBottom_toTopOf="@+id/tvProductoCanjeValor"
        app:layout_constraintEnd_toStartOf="@+id/tvProductoCanjeStockValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductoCanje" />

    <TextView
        android:id="@+id/tvProductoCanjeValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/valor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvProductoCanjeValorValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductoCanjeStock" />

    <TextView
        android:id="@+id/tvProductoCanjeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvProductoCanjeStockValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvProductoCanje"
        app:layout_constraintTop_toBottomOf="@+id/ivProductoCanjeImagen"
        tools:text="Licuadora" />

    <TextView
        android:id="@+id/tvProductoCanjeStockValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvProductoCanjeValorValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvProductoCanjeStock"
        app:layout_constraintTop_toBottomOf="@+id/tvProductoCanjeValue"
        tools:text="20" />

    <TextView
        android:id="@+id/tvProductoCanjeValorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvProductoCanjeValor"
        app:layout_constraintTop_toBottomOf="@+id/tvProductoCanjeStockValue"
        tools:text="500" />

    <!-- TODO: 1.0 agrega los textview para el lugar de canje por fa -->

</android.support.constraint.ConstraintLayout>